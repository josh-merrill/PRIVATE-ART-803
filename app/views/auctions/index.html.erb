<div class="container my-5">

  <div class="row">
  <h2>Upcoming auctions</h2>
    <% @auctions.each do |auction|%>
      <div class="col-sm-4">
        <div class="card-product">
          <b class="card-date-byline"><%= auction.end_time.to_date %></b>
          <%= link_to auction_path (auction.id) do %>
            <% if auction.photo.present? %>
              <%= cl_image_tag auction.photo.key, class: "w-100"%>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <% end %>
          <% end %>
          <div class="card-product-infos">
            <span><h6><i class="fas fa-map-marker-alt"></i> <%= auction.address %></h6>&nbsp;
              <p class="byline"> by <%= auction.user.first_name %> <%= auction.user.last_name %></p>
            </span>
            <h4><%= auction.title %> </h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
